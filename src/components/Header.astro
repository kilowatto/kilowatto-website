---
// Script de frontmatter vacío
---

<style is:global>
  /* Importamos los estilos a prueba de balas */
  @import "../styles/header-nav.css";
</style>

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex-shrink-0">
        <a
          href="/"
          class="flex items-center space-x-3"
          aria-label="Página de inicio"
        >
          <img
            src="/favicon.svg"
            alt="Kilowatto Logo"
            loading="lazy"
            decoding="async"
            class="h-20 w-20 object-contain -scale-x-100"
          />
          <!-- nombre en 2 lineas -->
          <div class="flex flex-col">
            <h1 class="text-xl font-bold text-gray-900">Esteban Rey</h1>
            <p class="text-xs text-gray-500">Kilowatto</p>
          </div>
        </a>
      </div>
    </div>

    <nav
      class="main-nav hidden md:flex md:items-center md:space-x-4 relative h-full"
    >
      <a
        href="/bio"
        class="nav-item text-gray-600 hover:text-orange-500 font-medium transition-colors duration-200 px-2 h-full flex items-center"
        style="--item-width: 50px; --item-offset-left: 12px;">Bio</a
      >
      <a
        href="/ignia-cloud"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 80px;"
        aria-label="Ignia Cloud"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Ignia+Cloud"
            alt="Ignia Cloud"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/f97316/ffffff?text=Ignia+Cloud"
            alt="Productos a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/cereza-soft"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 196px;"
        aria-label="Cereza Soft"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Cereza+Soft"
            alt="Cereza Soft"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/22c55e/ffffff?text=Cereza+Soft"
            alt="Cereza Soft a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/frida-cafe"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 312px;"
        aria-label="Frida Café"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Frida+Café"
            alt="Frida Café"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/3b82f6/ffffff?text=Frida+Café"
            alt="Frida Café a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/orange-rhino"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 428px;"
        aria-label="Orange Rhino Investments"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Orange+Rhino"
            alt="Orange Rhino Investments"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/8b5cf6/ffffff?text=Orange+Rhino"
            alt="Orange Rhino Investments a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/finsus"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 428px;"
        aria-label="Finsus"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Finsus"
            alt="Finsus"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/8b5cf6/ffffff?text=Finsus"
            alt="Finsus a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/otros-proyectos"
        class="nav-item text-gray-600 hover:text-orange-500 font-medium transition-colors duration-200 px-2 h-full flex items-center"
        style="--item-width: 60px; --item-offset-left: 544px;"
        >Otros Proyectos</a
      >

      <!-- ======================================================= -->
      <!-- ============== INICIO DEL EASTER EGG ================== -->
      <!-- ======================================================= -->
      <a
        href="#"
        class="nav-item h-full flex items-center"
        id="contact-melt-button"
        style="--item-width: 130px; --item-offset-left: 620px;"
      >
        <div class="content-wrapper">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon-letter"
            ><path
              d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
            ></path><polyline points="22,6 12,13 2,6"></polyline></svg
          >
          <span>Contáctame</span>
        </div>
        <div class="drips-container">
          <i class="drip"></i><i class="drip"></i><i class="drip"></i><i
            class="drip"></i><i class="drip"></i><i class="drip"></i><i
            class="drip"></i><i class="drip"></i><i class="drip"></i><i
            class="drip"></i>
        </div>
      </a>
      <!-- ======================================================= -->
      <!-- ================ FIN DEL EASTER EGG =================== -->
      <!-- ======================================================= -->
    </nav>

    <div class="md:hidden flex items-center">
      <!-- Contenido del menú móvil -->
    </div>
  </div>
</header>

<input type="checkbox" id="mobile-menu-toggle" class="hidden peer" />
<div
  class="hidden md:hidden peer-checked:block bg-white border-t border-gray-200"
>
  <!-- Links del menú móvil -->
</div>
