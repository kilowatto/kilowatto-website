---
import MeltingLink from "./MeltingLink.astro";

// Script de frontmatter vacío
---

<style is:global>
  /* Importamos los estilos a prueba de balas */
  @import "../styles/header-nav.css";
</style>

<style>
  #mobile-menu-toggle:checked ~ header #menu-open-icon {
    display: none;
  }
  #mobile-menu-toggle:checked ~ header #menu-close-icon {
    display: block;
  }
</style>

<input type="checkbox" id="mobile-menu-toggle" class="hidden peer" />

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex-shrink-0">
        <a
          href="/"
          class="flex items-center space-x-3"
          aria-label="Página de inicio"
        >
          <img
            src="/favicon.svg"
            alt="Kilowatto Logo"
            loading="lazy"
            decoding="async"
            class="h-20 w-20 object-contain -scale-x-100"
          />
          <!-- nombre en 2 lineas -->
          <div class="flex flex-col">
            <h1 class="text-xl font-bold text-gray-900">Esteban Rey</h1>
            <p class="text-xs text-gray-500">Kilowatto</p>
          </div>
        </a>
      </div>
      <div class="md:hidden flex items-center">
        <label for="mobile-menu-toggle" class="cursor-pointer p-2">
          <svg
            id="menu-open-icon"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            id="menu-close-icon"
            class="h-6 w-6 hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </label>
      </div>
    </div>

    <nav
      class="main-nav hidden md:flex md:items-center md:space-x-4 relative h-full"
    >
      <a
        href="/bio"
        class="nav-item text-gray-600 hover:text-orange-500 font-medium transition-colors duration-200 px-2 h-full flex items-center"
        style="--item-width: 50px; --item-offset-left: 12px;">Bio</a
      >
      <a
        href="/ignia-cloud"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 80px;"
        aria-label="Ignia Cloud"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Ignia+Cloud"
            alt="Ignia Cloud"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/f97316/ffffff?text=Ignia+Cloud"
            alt="Productos a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/cereza-soft"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 196px;"
        aria-label="Cereza Soft"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Cereza+Soft"
            alt="Cereza Soft"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/22c55e/ffffff?text=Cereza+Soft"
            alt="Cereza Soft a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/frida-cafe"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 312px;"
        aria-label="Frida Café"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Frida+Café"
            alt="Frida Café"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/3b82f6/ffffff?text=Frida+Café"
            alt="Frida Café a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/orange-rhino"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 428px;"
        aria-label="Orange Rhino Investments"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Orange+Rhino"
            alt="Orange Rhino Investments"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/8b5cf6/ffffff?text=Orange+Rhino"
            alt="Orange Rhino Investments a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/finsus"
        class="nav-item h-full flex items-center"
        style="--item-width: 100px; --item-offset-left: 428px;"
        aria-label="Finsus"
      >
        <div class="image-icon">
          <img
            src="https://placehold.co/100x40/E0E0E0/A0A0A0?text=Finsus"
            alt="Finsus"
            class="grayscale-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
          <img
            src="https://placehold.co/100x40/8b5cf6/ffffff?text=Finsus"
            alt="Finsus a color"
            class="color-img"
            loading="lazy"
            width="100"
            height="40"
            decoding="async"
          />
        </div>
      </a>
      <a
        href="/otros-proyectos"
        class="nav-item text-gray-600 hover:text-orange-500 font-medium transition-colors duration-200 px-2 h-full flex items-center"
        style="--item-width: 60px; --item-offset-left: 544px;"
        >Otros Proyectos</a
      >

      <!-- ======================================================= -->
      <!-- ============== INICIO DEL EASTER EGG ================== -->
      <!-- ======================================================= 

      <MeltingLink id="contact-melt-button" href="/es/contact">
        Contáctame
      </MeltingLink>
      
       ======================================================= -->
      <!-- ================ FIN DEL EASTER EGG =================== -->
      <!-- ======================================================= -->
    </nav>
  </div>
</header>

<div
  class="hidden md:hidden peer-checked:block bg-white border-t border-gray-200"
>
  <div class="pt-2 pb-3 space-y-1">
    <a
      href="/bio"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Bio</a
    >
    <a
      href="/ignia-cloud"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Ignia Cloud</a
    >
    <a
      href="/cereza-soft"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Cereza Soft</a
    >
    <a
      href="/frida-cafe"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Frida Café</a
    >
    <a
      href="/orange-rhino"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Orange Rhino</a
    >
    <a
      href="/finsus"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Finsus</a
    >
    <a
      href="/otros-proyectos"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Otros Proyectos</a
    >
    <a
      href="#"
      id="contact-melt-button-mobile"
      class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300"
      >Contáctame</a
    >
  </div>
</div>
